<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true" public="false" />

        <service id="Lexik\Bundle\MaintenanceBundle\Drivers\DriverFactory" alias="lexik_maintenance.driver.factory"/>

        <service id="RichId\MaintenanceBundle\Controller\AdministrationController" />
        <service id="twig.extension.maintenance" class="RichId\MaintenanceBundle\Twig\Extension\MaintenanceExtension" />
    </services>
</container>
