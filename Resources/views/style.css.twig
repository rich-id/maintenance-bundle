:root {
    --rich-id-maintenance-warning: #d93349;
    --rich-id-maintenance-warning-contrast: #c32e42;

    --rich-id-maintenance-label-color: #333333;
    --rich-id-maintenance-toggle-backgroud: #767676;
    --rich-id-maintenance-toggle-checked-backgroud: #d93349;

    --rich-id-maintenance-alert-background-color: #d93349;
    --rich-id-maintenance-alert-title-color: #FFFFFF;
    --rich-id-maintenance-alert-content-color: #FFFFFF;

    --rich-id-maintenance-alert-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.2), 0 0 10px 0 rgba(0, 0, 0, 0.3);
    --rich-id-maintenance-alert-radius: 20px;

    --rich-id-maintenance-alert-position-top: initial;
    --rich-id-maintenance-alert-position-bottom: 40px;

    --rich-id-maintenance-alert-width: 130px;
    --rich-id-maintenance-alert-z-index: 1000000;

    --rich-id-maintenance-alert-font-family: Helvetica, Arial, sans-serif;
}

.rich-id-maintenance-page .rich-id-maintenance-page-actions {
    padding-top: 35px;
}

.rich-id-maintenance-warning {
    align-items: center;
    background-color: var(--rich-id-maintenance-warning);
    color: white;
    display: flex;
}

.rich-id-maintenance-warning:before {
    background-color: var(--rich-id-maintenance-warning-contrast);
    content: url("data:image/svg+xml,%3Csvg aria-hidden='true' focusable='false' data-prefix='fas' data-icon='exclamation-triangle' class='svg-inline--fa fa-exclamation-triangle fa-w-18' role='img' xmlns='http://www.w3.org/2000/svg' viewBox='0 0 576 512'%3E%3Cpath fill='white' d='M569.517 440.013C587.975 472.007 564.806 512 527.94 512H48.054c-36.937 0-59.999-40.055-41.577-71.987L246.423 23.985c18.467-32.009 64.72-31.951 83.154 0l239.94 416.028zM288 354c-25.405 0-46 20.595-46 46s20.595 46 46 46 46-20.595 46-46-20.595-46-46-46zm-43.673-165.346l7.418 136c.347 6.364 5.609 11.346 11.982 11.346h48.546c6.373 0 11.635-4.982 11.982-11.346l7.418-136c.375-6.874-5.098-12.654-11.982-12.654h-63.383c-6.884 0-12.356 5.78-11.981 12.654z'%3E%3C/path%3E%3C/svg%3E");
    display: inline-block;
    height: 100%;
    margin-right: 15px;
    padding: 7px 10px;
    width: 50px;
}

.rich-id-maintenance-toggle {
    background: none;
    display: block;
    margin: 10px 0;
    position: relative;
}

{# Toggle #}
.rich-id-maintenance-toggle input[type="checkbox"] {
    opacity: 0 !important;
}

.rich-id-maintenance-toggle input[type="checkbox"] + label {
    color: var(--rich-id-maintenance-label-color);
    left: 0;
    padding: 0 0 0 50px;
    position: absolute;
    top: 0;
}

.rich-id-maintenance-toggle input[type="checkbox"] + label:before {
    -moz-box-sizing: border-box;
    -moz-transition: background-color 0.4s ease;
    -webkit-box-sizing: border-box;
    -webkit-transition: background-color 0.4s ease;
    background-color: var(--rich-id-maintenance-toggle-backgroud);
    border-radius: 12px;
    box-sizing: border-box;
    content: '';
    height: 24px;
    left: 0;
    position: absolute;
    top: 0;
    transition: background-color 0.4s ease;
    width: 39px;
}

.rich-id-maintenance-toggle input[type="checkbox"]:checked + label:before {
    background-color: var(--rich-id-maintenance-toggle-checked-backgroud);
}

.rich-id-maintenance-toggle input[type="checkbox"] + label:after {
    -moz-box-sizing: border-box;
    -moz-transition: -moz-transform 0.4s cubic-bezier(0.45, 1.8, 0.5, 0.75);
    -webkit-box-sizing: border-box;
    -webkit-transition: -webkit-transform 0.4s cubic-bezier(0.45, 1.8, 0.5, 0.75),;
    background-color: #fff;
    border-radius: 500rem;
    box-sizing: border-box;
    content: '';
    height: 18px;
    left: 4px;
    position: absolute;
    top: 3px;
    transition: transform 0.4s cubic-bezier(0.45, 1.8, 0.5, 0.75);
    width: 18px;
}

.rich-id-maintenance-toggle input[type="checkbox"]:checked + label:after {
    transform: translateX(13px);
}

{# Flag #}
.rich-id-maintenance-flag {
    background: var(--rich-id-maintenance-alert-background-color);
    border-bottom-right-radius: var(--rich-id-maintenance-alert-radius);
    border-top-right-radius: var(--rich-id-maintenance-alert-radius);
    bottom: var(--rich-id-maintenance-alert-position-bottom);
    box-shadow: var(--rich-id-maintenance-alert-shadow);
    left: 0;
    position: fixed;
    top: var(--rich-id-maintenance-alert-position-top);
    width: var(--rich-id-maintenance-alert-width);
    z-index: var(--rich-id-maintenance-alert-z-index);
}

.rich-id-maintenance-flag-title {
    color: var(--rich-id-maintenance-alert-title-color);
    font-family: var(--rich-id-maintenance-alert-font-family);
    font-weight: 600;
    padding: 5px;
    text-align: center;
    word-break: break-word;
}

.rich-id-maintenance-flag-content {
    color: var(--rich-id-maintenance-alert-content-color);
    font-family: var(--rich-id-maintenance-alert-font-family);
    padding: 5px;
    text-align: center;
    word-break: break-word;
}

@media print {
    .rich-id-maintenance-flag {
        display: none;
    }
}
