{% if isWebsiteInMaintenance() %}
    <style>
        {% include 'RichIdMaintenanceBundle::style.css.twig' %}
    </style>

    <div class="rich-id-maintenance-flag">
        <div class="rich-id-maintenance-flag-title">{{ 'maintenance.website_lock'|trans({}, 'maintenance') }}</div>
        <div class="rich-id-maintenance-flag-content">{{ 'maintenance.website_lock_description'|trans({}, 'maintenance') }}</div>

        {% if hasAccessToAdministration() %}
            <div class="rich-id-maintenance-flag-link">
                <a href="{{ path('maintenance_admin') }}">{{ 'maintenance.website_lock_link'|trans({}, 'maintenance') }}</a>
            </div>
        {% endif %}
    </div>
{% endif %}
